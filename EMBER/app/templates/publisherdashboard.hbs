  <LinkTo @route="readerdashboard" @model="0" {{action "toggleReaderMode"}}><i class="fa fa-retweet"></i> &nbsp;&nbsp;Reader Mode</LinkTo>
  <a href="#" class={{if this.isPublishedBooksVisible "icon-a"}} {{action "getBooks"}} {{action "togglePublishedBooksVisible" }}><i class="fa fa-book"></i> &nbsp;&nbsp;Published Books</a>
  <a href="#" class={{if this.isReadersVisible "icon-a"}} {{action  "getReaders"}} {{action "toggleReadersVisible"}}><i class="fa fa-list icons"></i> &nbsp;&nbsp;Readers</a>
