<div class="body-div">
    <div class="login">
      <div class="login-content">
        <div class="login-top">
          <h1 class="login-header">R E G I S T E R</h1>
          
        </div>
        <form {{on "submit" this.submitForm}}>
        <div class="login-fields">
          
          <div class="login-form">
            <label for="">Email</label>
            {{input type="email" value=(mut this.email)}}
          </div>
          <div class="login-form">
            <label for="">Password</label>
            {{input type="password" value=(mut this.password)}}
          </div>
          <div class="login-form">
            <label for="">Name</label>
            <div class="name-input">
          {{input type="text" value=(mut this.first_name)}}
          {{input type="text" value=(mut this.last_name)}}
            </div>
          </div>
          
          <div class="login-form">
            <label for="">Mobile No</label>
             {{input type="tel" value=(mut this.mobile_no)}}
          </div>
          <div class="login-form">
            <label for="">Address</label>
           {{input type="text" value=(mut this.address) placeholder="Enter your address"}}
          </div>
          <div class="login-form">
            <label for="">User Type</label>
            <select onchange={{action "selectOption" value="target.value"}}>
              <option value="1">Reader</option>
              <option value="2">Publisher</option>
              <option value="3">Staff</option>
              
            </select>
          </div>
          <button class="info2" type="submit">Sign Up</button>
        
        </div>
       </form>
      </div>
          

      <span class="login-signup">Having an account?  <LinkTo @route="signin"><span> Sign In</span></LinkTo></span>
     
    </div>
</div>
